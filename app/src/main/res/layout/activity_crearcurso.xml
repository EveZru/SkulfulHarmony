<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCurso"
    android:background="@color/black"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/scrollable_createcourse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginVertical="10dp"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/rojo_oscuro"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_fotocurso"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/subir_ico"
                    android:contentDescription="Seleccionar imagen"
                    android:clickable="true"
                    android:focusable="true"/>


            </androidx.cardview.widget.CardView>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/grayverde2"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">

            <EditText
                android:id="@+id/et_nombre_nuevo_curso"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:gravity="center"
                android:hint="Agregale un nombre a tu curso"
                android:textColor="@color/cafe2"
                android:textColorHint="@color/grayverde"
                android:backgroundTint="@color/cafe1"/>

</androidx.cardview.widget.CardView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    app:cardBackgroundColor="@color/grayverde2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="20dp">
                <EditText
                    android:id="@+id/et_descripcion_nuevo_curso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Agrega una pequeña descripción de tu curso explicando los temas que buscas tratar"
                    android:layout_margin="10dp"
                    android:padding="8dp"
                    android:textColor="@color/cafe2"
                    android:textColorHint="@color/grayverde"
                    android:backgroundTint="@color/cafe1"
                    android:inputType="textMultiLine"
                    android:gravity="top|start"
                    android:minLines="1"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    android:overScrollMode="ifContentScrolls"
                    android:scrollHorizontally="false"
                    />
                </androidx.cardview.widget.CardView>
            </ScrollView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                app:cardBackgroundColor="@color/grayverde2"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_topb"

                android:gravity="center_vertical">

                <TextView
                    android:textColor="@color/cafe1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Instrumento"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/sp_Instrumento"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/gray1"
                    android:backgroundTint="@color/rojo_oscuro"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:textColor="@color/cafe1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nivel"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/sp_Nivel"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/rojo_oscuro"
                    android:textColor="@color/black"
                    style="@style/SpinnerBlackText"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:textColor="@color/cafe1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Género"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/sp_Genero"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/rojo_oscuro"
                    />
            </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <android.widget.Button
        android:id="@+id/btn_subir_curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/error_button"
        android:text="publicar"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        />


</LinearLayout>