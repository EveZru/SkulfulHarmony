<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EliminarCuenta">

    <!-- Texto de confirmación de eliminación -->
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="251dp"
        android:layout_height="181dp"
        android:layout_gravity="center"
        android:background="@drawable/third_rounder_button"
        android:text="@string/eliminarcuent"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <!-- Botón de Confirmar Eliminación -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirmar_eliminar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_button"
        android:text="@string/si"
        android:textColor="#000000"
        android:textSize="16sp"
        android:minHeight="48dp"
        android:minWidth="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />

    <!-- Botón de Cancelar Eliminación -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancelar_eliminar"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edit_text"
        android:text="@string/cancelar"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:minHeight="48dp"
        android:minWidth="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirmar_eliminar"
        app:layout_constraintVertical_bias="0.131" />
</androidx.constraintlayout.widget.ConstraintLayout>