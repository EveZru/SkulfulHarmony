<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Mensaje de cuanto llevas hoy -->
        <TextView
            android:id="@+id/tiempoHoyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoy llevas: --"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <!-- Gráfica manual usando ProgressBars -->
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Domingo" />
        <ProgressBar
            android:id="@+id/barDomingo"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lunes" />
        <ProgressBar
            android:id="@+id/barLunes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Martes" />
        <ProgressBar
            android:id="@+id/barMartes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Miércoles" />
        <ProgressBar
            android:id="@+id/barMiercoles"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jueves" />
        <ProgressBar
            android:id="@+id/barJueves"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Viernes" />
        <ProgressBar
            android:id="@+id/barViernes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sábado" />
        <ProgressBar
            android:id="@+id/barSabado"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

    </LinearLayout>


</ScrollView>