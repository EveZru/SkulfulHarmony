<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/black1">
<!--mauqetado-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/cafe1"
        app:cardCornerRadius="10dp"
        android:elevation="6dp"
        android:layout_marginVertical="140dp"
        app:cardElevation="6dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        android:layout_margin="3dp"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <!-- Mensaje de cuanto llevas hoy -->
        <TextView
            android:id="@+id/tiempoHoyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoy llevas: --"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/cafe2"
            android:paddingBottom="16dp"/>

        <!-- Gráfica manual usando ProgressBars -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domingo"
            android:textColor="@color/cafe"/>
        <ProgressBar
            android:id="@+id/barDomingo"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rojo"
            android:max="240" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:textColor="@color/cafe"/>
        <ProgressBar
            android:id="@+id/barLunes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:textColor="@color/cafe" android:layout_height="wrap_content" android:text="Martes" />
        <ProgressBar
            android:id="@+id/barMartes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:textColor="@color/cafe" android:layout_height="wrap_content" android:text="Miércoles" />
        <ProgressBar
            android:id="@+id/barMiercoles"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:textColor="@color/cafe" android:layout_height="wrap_content" android:text="Jueves" />
        <ProgressBar
            android:id="@+id/barJueves"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content"  android:textColor="@color/cafe" android:layout_height="wrap_content" android:text="Viernes" />
        <ProgressBar
            android:id="@+id/barViernes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <TextView android:layout_width="wrap_content" android:textColor="@color/cafe"  android:layout_height="wrap_content" android:text="Sábado" />
        <ProgressBar
            android:id="@+id/barSabado"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="240" />

        <!-- Agregamos el botón para modificar el tiempo -->
       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/cafe1"/>
        <Button
            android:id="@+id/btnModificarTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar tiempo de descanso"
            android:backgroundTint="@color/black"
            android:textColor="@color/cafe2"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</ScrollView>