<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray2">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartituloclase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aa000000">
        <TextView
            android:id="@+id/verclase_vertitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo de la clase"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray2"
            >
            <!-- Card de la clase -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/gray1"
                app:cardCornerRadius="10dp"
                android:elevation="6dp"
                app:cardElevation="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/gray1"
                    android:padding="10dp">
                    <!-- Video -->
                    <androidx.media3.ui.PlayerView
                        android:id="@+id/vv_videoclase"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="10dp" />
                    <!-- Info texto -->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Informacion"
                                android:textSize="22sp"
                                android:background="@color/gray2"
                                android:textColor="@color/white"
                                android:padding="5dp"
                                android:gravity="center|top"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:padding="5dp"
                                android:id="@+id/tv_info_verclase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Texto de informaciÃ³n super hiper mega importante de vital importancia"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:background="@color/gray2"
                                />
                        </LinearLayout>


                    <!-- Preguntas -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray2"
                        app:cardCornerRadius="5dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/gray2"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cuestionario de la clase"
                                android:textSize="22sp"
                                android:background="@color/gray2"
                                android:textColor="@color/white"
                                android:padding="5dp"
                                android:gravity="center|top"
                                android:textStyle="bold"
                                />
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_preguntasporclase_verclase"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="false" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <android.widget.Button
                android:id="@+id/btn_updatecurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"

                android:background="@drawable/third_rounder_button"
                android:text="Cambiar"
                android:textColor="@color/grayverde1"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                />

            <android.widget.Button
                android:id="@+id/btn_cancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/error_button"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
