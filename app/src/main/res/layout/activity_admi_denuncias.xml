<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    tools:context=".admi_denuncias">
    <!-- Tmaquetado -->
    <!-- Toolbar moderna -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:title="Denuncias"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Controles en la parte superior -->
    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/rojo_oscuro"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_vercursos_verdenuncias"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
          android:layout_marginVertical="5dp"
            android:backgroundTint="@color/rojo_oscuro"
            android:text="Cursos"/>
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/cafe"/>
        <Button
            android:id="@+id/btn_verclases_verdenuncias"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/rojo_oscuro"
            android:text="Clases"/>
        <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/cafe"/>

        <Button
            android:id="@+id/btn_vercomentarios_verdenuncias"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginVertical="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/rojo_oscuro"
            android:text="Comentario"/>
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_demandas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_buttons"
        app:layout_constraintBottom_toTopOf="@id/barra_navegacion1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BottomNavigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/barra_navegacion1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gray2"
        app:itemBackground="@color/black"
        app:itemIconTint="@color/rojo"
        app:itemTextColor="@color/gray1"
        app:menu="@menu/barra_adminnavegacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>