<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bacground_dialog"
    android:gravity="center"
    android:layout_gravity="center"
    android:elevation="20dp">


    <TextView
        android:id="@+id/txt_mensajegrande_dialogcalificacionpreguntas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar comentario"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/gray2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:paddingHorizontal="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/et_editar_comentario_vercurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escribe un nuevo comentario\n"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textColorHint="#DDdddddd"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:maxLines="10"
                android:scrollHorizontally="false"
                android:gravity="top|start"
                android:scrollbars="vertical"
                />
        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancelar_dialogcalificacionpreguntas"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:backgroundTint="@color/rojo_oscuro"
            android:layout_marginHorizontal="2dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btn_aceptar_dialogcalificacionpreguntas"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:backgroundTint="@color/verde"
            android:layout_marginHorizontal="2dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>