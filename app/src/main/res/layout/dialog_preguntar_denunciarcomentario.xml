<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bacground_dialog"
    android:gravity="center"
    android:layout_gravity="center"
    android:elevation="20dp">


    <TextView
        android:id="@+id/txt_mensajegrande_dialogcreardenuncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Enviar la denuncia?"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="0dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/gray1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_verusario_denunciar_comentario"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:paddingHorizontal="5dp"
                android:paddingBottom="5dp"
                android:gravity="top|start"
                android:text="Tipo: "
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                />

            <TextView
                android:text="Contenido:"
                android:gravity="top|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_vermensaje_denunciar_comentario"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:paddingHorizontal="5dp"
                android:paddingBottom="15dp"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                />

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cancelar_dialog_denunciar_comentario"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:backgroundTint="@color/rojo_oscuro"
            android:layout_marginHorizontal="2dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btn_enviar_dialog_denunciar_comentario"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Enviar  "
            android:backgroundTint="@color/verde"
            android:layout_marginHorizontal="2dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>